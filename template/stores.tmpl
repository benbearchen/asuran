<html>
<head>
<title>{{.Client}}'s url stored contents</title>
<style type="text/css">
/* copy from http://www.w3school.com.cn/tiy/t.asp?f=csse_table_fancy */
#profile
  {
  font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
  border-collapse:collapse;
  }

#profile td, #profile th 
  {
  font-size:1em;
  border:1px solid #98bf21;
  padding:3px 7px 2px 7px;
  min-width:100px;
  }

#profile th 
  {
  font-size:1.1em;
  text-align:left;
  padding-top:5px;
  padding-bottom:4px;
  background-color:#A7C942;
  color:#ffffff;
  }

#profile tr.alt td 
  {
  color:#000000;
  background-color:#EAF2D3;
  }
</style>
</head>
<body>
<table id="profile">
<tr>
<th>ID</th>
<th>编辑</th>
<th>内容</th>
</tr>
{{range .Contents}}
<tr{{if .Even}} class="alt"{{end}}>
<td><a href="/profile/{{.Client}}/stores/{{.ID}}" target="_blank">{{.ID}}</a></td>
<td><a href="/profile/{{.Client}}/stores/edit/{{.ID}}" target="_blank">编辑</a></td>
<td>{{.EncodedContent}}</td>
</tr>
{{end}}
</table>

</body>
</html>
