<script type="text/javascript">

function appendCmd(cmd) {
{{if .NotOwner}}
  return;
{{end}}
  var cmdBox = document.getElementById('CommandBoxId');
  if (cmdBox.value == "" || cmdBox.value.slice(-1) == "\n") {
    cmdBox.value = cmdBox.value + cmd + "\n";
  } else {
    cmdBox.value = cmdBox.value + "\n" + cmd + "\n";
  }
}

function selectOpt(id) {
  var s = document.getElementById(id);
  return s.value;
}

function readInput(id, argName) {
  var i = document.getElementById(id);
  if (i.value == "") {
    alert(argName + '不能为空');
    return;
  }

  if (i.value.indexOf(" ") >= 0) {
    alert(argName + '不能有空格');
    return;
  }

  return i.value;
}

function readOptionInput(optid, id, argName) {
  var opt = document.getElementById(optid);
  if (opt.value != "") {
    return opt.value;
  }

  return readInput(id, argName);
}

function proxyCmd(act, opt) {
  if (opt === undefined) {
    return;
  }

  var u = document.getElementById('ProxyUrl');
  if (u.value == "") {
    alert('proxy 操作的 URL 不能为空');
    return;
  }

  if (opt != "") {
    act = act + " " + opt;
  }

  var s = document.getElementById('do302');
  if (s.checked) {
    act = act + " " + "do302";
  }

  s = document.getElementById('disable304');
  if (s.checked) {
    act = act + " " + "disable304";
  }

  appendCmd('url ' + act + ' ' + u.value);
}

function delayCmd(act) {
  var d = document.getElementById('DelayDuration');
  if (d.value == "") {
    alert('delay 操作的时长不能为空');
    return;
  }

  var u = document.getElementById('ProxyUrl');
  if (u.value == "") {
    alert('proxy 操作的 URL 不能为空');
    return;
  }

  r = selectOpt('RandOption');
  if (r != "") {
    act = act + " " + r;
  }

  appendCmd('url ' + act + ' ' + d.value + ' ' + u.value);
}

function deleteCmd() {
  var u = document.getElementById('ProxyUrl');
  if (u.value == "") {
    alert('delete 操作的 URL 不能为空');
    return;
  }

  appendCmd('url delete ' + u.value);
}

function redirectOpt() {
  var ip = document.getElementById('DomainRedirectIP');
  if (ip.value == "") {
    return "";
  }

  var re=/^(\d{1,2}|1\d\d|2[0-4]\d|25[0-5])(\.(\d{1,2}|1\d\d|2[0-4]\d|25[0-5])){3}$/;
  if (!re.test(ip.value))
  {
    alert("无效 IP（应为四段数字“xxx.xx.xxx.xx”且数字介于 0~255 之间）");
    return;
  }

  return " " + ip.value;
}

function domainCmd(act, opt) {
  if (opt === undefined) {
    return;
  }

  var d = document.getElementById('Domain');
  if (d.value == "") {
    alert('doman 操作的域名不能为空');
    return;
  }

  appendCmd('domain ' + act + ' ' + d.value + opt);
}

function openPack() {
  var cmdBox = document.getElementById('CommandBoxId');
  var packBox = document.getElementById('PackCommandBox');
  packBox.value = cmdBox.value;
  $( "#packDialog" ).dialog( "open" );
}

function reloadPack() {
  $.ajax({
    url: "/packs/names.json",
    dataType: "json",
    success: function(names) {
      var name = document.getElementById('packNameOptions').value;
      $( "#packNameOptions" ).empty();
      for (var i = 0; i < names.length; i++) {
        $( '<option value="' + names[i] + '">' + names[i] + '</option>' ).appendTo( "#packNameOptions" );
        if (name == names[i]) {
          $( "#packNameOptions" )[0].selectedIndex = i;
        }
      }
    }
  });
}

function loadPack() {
  var name = document.getElementById('packNameOptions').value;
  var cmd = $.ajax({
    url : "/packs/get?name=" + encodeURIComponent(name),
    async: false
  });

  if (cmd.status != 200) {
    alert("加载失败：" + cmd.responseText);
  } else {
    appendCmd(cmd.responseText);
  }
}

function onlineTest() {
  $( "#onlineTestDialog" ).dialog( "open" );
}

function doOnlineTest() {
  var policy = $("#onlineTestPolicy").val();
  var url = $("#onlineTestURL").val();
  if(!String.prototype.startsWith){
    String.prototype.startsWith = function (str) {
      return !this.indexOf(str);
    }
  }

  if (url.startsWith("http://")) {
    url = url.substring(7);
  } else if (url.startsWith("https://")) {
    url = url.substring(8);
  }

  if (url == "") {
    alert("无效 URL");
    return;
  }

  if (policy == "") {
    window.open("/profile/{{.IP}}/to/" + url, "_blank");
  } else {
    window.open("/profile/{{.IP}}/policy/" + encodeURIComponent(policy) + "/" + url, "_blank");
  }

  $("#onlineTestDialog").dialog("close");
}

function matchURLPolicy() {
  var url = $("#onlineTestURL").val();
  if (url == "") {
    alert("无效 URL");
    return;
  }

  var cmd = $.ajax({
    type: "POST",
    url: "/profile/{{.IP}}/match",
    data: {url: url},
    success: function(data) {
      $("#onlineTestPolicy").val(data);
    },
    error: function(data) {
      alert("失败：" + data);
    },
    async: false
  });
}

function createPolicyForOnlineTest() {
  // TODO:
}

function openOperatorDialog() {
  $( "#operatorDialog" ).dialog("open");
}

function doOperator(op) {
  var ip = document.getElementById('operatorIP').value;
  var re=/^(\d{1,2}|1\d\d|2[0-4]\d|25[0-5])(\.(\d{1,2}|1\d\d|2[0-4]\d|25[0-5])){3}$/;
  if (!re.test(ip))
  {
    alert("无效客户端 IP（应为四段数字“xxx.xx.xxx.xx”且数字介于 0~255 之间）");
    return;
  }

  var cmd = $.ajax({
    url : "/profile/{{.IP}}/operator/" + op + "/" + ip,
    async: false
  });

  if (cmd.status != 200) {
    alert("操作失败：" + cmd.responseText);
  } else {
    $( "#operatorList" ).text(cmd.responseText);
    alert("操作成功")
    $( "#operatorDialog" ).dialog( "close" );
  }
}

function createPolicy() {
  $("#createPolicyDialog").dialog("open");
}

function createURLPolicy() {
  $("#createPolicyDialog").dialog("close");

  // TODO:
}

function createDomainPolicy() {
  $("#createPolicyDialog").dialog("close");

  // TODO:
}

</script>
</head>

<body>
<div>配置名字：{{.Name}}</div>
<div>目标设备 IP：{{.IP}}，拥有者 IP：{{.Owner}}</div>
<div>操作员 IP：<u id="operatorList">{{.Operators}}</u>{{if .NotOwner}}（你不能操作此配置）{{else}}
<input id="operatorButton" type="button" value="增删操作员" onclick="openOperatorDialog()" style="display:none" />
<div id="operatorDialog" title="操作员" style="display:none">
操作者 IP：<input type="text" id="operatorIP" size="16" /><br/>
<input type="button" value="添加" onclick="doOperator('add')"/>
<input type="button" value="删除" onclick="doOperator('remove')"/>
</div>
{{end}}
</div>
<hr style="margin-bottom: 0"/>
{{if .NotOwner}}{{else}}
<div class="btn" style="color:#FF0000;"><a href="/profile/{{.IP}}/restart" target="_blank" title="清除超时、缓存等">！重启客户端状态！</a></div>
{{end}}
<div class="btn"><a href="/profile/{{.IP}}/history" target="_blank" title="查看域名查询、HTTP 访问等日志">查看日志</a></div>
<div class="btn"><a href="/profile/{{.IP}}/stores" target="_blank" title="">查看当前保存的内容列表</a></div>
<hr/>
<table id="profile">
<tr>
<th>编辑命令</th>
<th>URL 匹配模式</th>
<th>代理行为</th>
<th>延时设定</th>
<th>其它设置</th>
</tr>
{{range .Urls}}
<tr{{if .Even}} class="alt"{{end}}>
<td><input type="button" value="修改" onclick="appendCmd('{{.Edit}}');"/>{{if .Delete}}&nbsp;<input type="button" value="删除" onclick="appendCmd('{{.Delete}}');"/>{{end}}</td>
<td style="min-width:500px;">{{.Pattern}}</td>
<td>{{.Action}}</td>
<td>{{.Delay}}</td>
<td>{{.Settings}}</td>
</tr>
{{end}}
</table>
<hr/>

<table id="profile">
<tr>
<th>编辑命令</th>
<th>域名</th>
<th>查询行为</th>
<th>目标 IP</th>
</tr>
{{range .Domains}}
<tr{{if .Even}} class="alt"{{end}}>
<td><input type="button" value="修改" onclick="appendCmd('{{.Edit}}');"/>&nbsp;<input type="button" value="删除" onclick="appendCmd('{{.Delete}}');"/></td>
<td style="min-width:500px;">{{.Domain}}</td>
<td>{{.Action}}</td>
<td>{{.IP}}</td>
</tr>
{{end}}
</table>
<hr/>

<form action="/profile/{{.Path}}" method="post">
<table width="600"><tr>
<td><b>命令：</b></td><td><input type="submit" value="执行命令"/></td><td>（<a href="/profile/{{.Path}}/export" target="_blank">导出上述配置的命令</a>）</td>
<td><input type="button" value="在线测试 URL" onclick="onlineTest()"/>
<div id="onlineTestDialog" title="在线测试 URL" style="display:none">
目标 URL：<input type="text" id="onlineTestURL" style="width:100%" placeholder="http://g.cn/" /><br/>
<a href="/profile/commands" target="_blank">命令策略</a>：<input style="float:right" value="匹配 URL 的策略" type="button" onclick="matchURLPolicy()" /><input style="float:right" value="策略向导" type="button" onclick="createPolicyForOnlineTest()" /><input type="text" id="onlineTestPolicy" style="width:100%" placeholder="speed 100 # 留空则使用 profile 的策略"/><br/>
<input type="button" value="测试" onclick="doOnlineTest()"/>
</div>
{{if .NotOwner}}{{else}}
<input type="button" value="命令策略向导" onclick="createPolicy()"/>
{{end}}
<div id="createPolicyDialog" title="命令策略向导" style="display:none">
<input type="button" value="生成 URL 命令策略" onclick="createURLPolicy()"/>
<input type="button" value="生成 Domain 命令策略" onclick="createDomainPolicy()"/>
</div>
</td>
</tr>
</table>
<textarea rows="10" cols="80" id="CommandBoxId" name="cmd" {{if .NotOwner}}readonly="readonly" placeholder="# sorry，您的 IP 无权操作、修改 profile，请从 {{.Owner}}{{if .Operators}}, {{.Operators}}{{end}} 等设备上添加你的 IP 为操作员，然后再操作"{{end}}></textarea>
</form>

<div id="packButton" style="display:none;">
<hr/>
<input type="button" value="打包命令" onclick="openPack()" /> --&gt; <a href="/packs" target="_blank">已有命令列表</a>：<select id="packNameOptions" style="width:20em"></select><input type="button" value="加载命令包" onclick="loadPack()" />
<div id="packDialog" title="打包命令">
<form id="packForm" action="/profile/{{.Path}}/pack" method="post">
包名：<input type="text" name="name" size="30" placeholder="module.case.item"/><br/>
作者：<input type="text" name="author" size="30" placeholder="your nickname"/><br/>
介绍：<input type="text" name="comment" size="30" placeholder=""/><br/>
<input type="submit" value="打包如下命令：" /><br/>
<textarea rows="5" cols="40" id="PackCommandBox" name="cmd"></textarea>
</form>
</div>
</div>

<hr/>

<b>命令导航：</b>（<a href="/profile/commands" target="_blank">命令规范</a>）
{{if .NotOwner}}{{else}}
<div id="commandTabs">
<ul style="display:none;" id="ulCommandTabs">
<li><a href="#commandTabs-1">URL 命令</a></li>
<li><a href="#commandTabs-2">Domain 命令</a></li>
<li><a href="#commandTabs-3">神秘功能</a></li>
</ul>
<div id="commandTabs-1">
<table border="1">
<tr>
<td rowspan="12">url</td>
<td rowspan="8">代理行为</td><td colspan="2"><button type="button" onclick="proxyCmd('proxy', '');">[proxy]</button>: 使用代理</td><td rowspan="11">可选配置<br/><label><input id="do302" type="checkbox" />允许 302 跳转</label><br/><label><input id="disable304" type="checkbox" />禁止 304</label></td><td rowspan="12">URL: <br/><input type="text" id="ProxyUrl" size="40" placeholder="domain.com/path/of/page?query=option"/><br/>URL 格式如下：<br/>[domain[:port]]/[path][?query=option]<br/>域名和路径支持通配符 *<br/>特殊地，all 可以操作所有已配置 URL</td>
</tr>
<tr>
<td colspan="2"><button type="button" onclick="proxyCmd('cache', '');">cache</button>: 代理并缓存</td>
</tr>
<tr>
<td colspan="2"><button type="button" onclick="proxyCmd('status', selectOpt('StatusOption'));">status</button> <select id="StatusOption"><option value="404">404</option><option value="502">502</option></select>: 仅以状态码返回</td>
</tr>
<tr>
<td><button type="button" onclick="proxyCmd('map', readInput('MapUrl', 'map 的第三方 URL '));">map</button>: 获取第三方链接的内容返回</td><td rowspan="2"><input type="text" id="MapUrl" size="30" placeholder="第三方 URL"/></td>
</tr>
<tr>
<td><button type="button" onclick="proxyCmd('redirect', readInput('MapUrl', 'redirect 的第三方 URL '));">redirect</button>: 302 跳转至第三方链接</td>
</tr>
<tr>
<td><button type="button" onclick="proxyCmd('rewrite', readInput('RewriteContent', 'rewrite 的 url-encoded 文本'));">rewrite</button>: 返回指定内容</td><td rowspan="2"><input type="text" id="RewriteContent" size="35" placeholder="url-encoded 文本"/> <a href="/urlencoded" target="_blank">生成</a></td>
</tr>
<tr>
<td><button type="button" onclick="proxyCmd('tcpwrite', readInput('RewriteContent', 'tcpwrite 的 url-encoded 文本'));">tcpwrite</button>: 直接以 TCP 返回指定内容</td>
</tr>
<tr>
<td><button type="button" onclick="proxyCmd('restore', readOptionInput('StoresOption', 'StoreID', 'restore 的内容 store-id '));">restore</button>: 以预定义内容 ID 返回内容</td><td><select id="StoresOption"><option value="">输入: </option><optgroup label="或选择已有：">{{range .Stores}}<option value="{{.}}">{{.}}</option>{{end}}</optgroup></select><input type="text" id="StoreID" placeholder="store-id"/></td>
</tr>
<tr>
<td rowspan="3">延时操作</td><td><button type="button" onclick="delayCmd('delay');">delay</button>: 每次请求延时</td><td rowspan="3">随机：<select id="RandOption"><option value="">否</option><option value="rand">是</option></select><br/>时长: <input type="text" id="DelayDuration" size="6"/><br/>如: 100ms, 5s, 1m</td>
</tr>
<tr>
<td><button type="button" onclick="delayCmd('drop');">drop</button>: 前“时长”时间内都掉线</td>
</tr>
<tr>
<td><button type="button" onclick="delayCmd('timeout');">timeout</button>: 等待“时长”后掉线</td>
</tr>
<tr>
<td colspan="4"><button type="button" onclick="deleteCmd();">delete</button>: 删除 URL 配置</td>
</tr>
</table>

<p>注: 任何对 URL 的代理行为，均要求域名重定向到代理服务器。如域名还没有配置，则会自动添加</p>
</div>
<div id="commandTabs-2">
<table border="1">
<tr>
<td rowspan="5">domain</td><td><button type="button" onclick="domainCmd('default', redirectOpt());">[default]</button>: 默认返回正常 IP</td><td rowspan="4">自定义 IP:<br/><input type="text" id="DomainRedirectIP"/></td><td rowspan="5">域名: <input type="text" id="Domain"/><br/>支持通配符 *，如 *.domain.com <br/>特殊地，all 可以操作所有已配置域名</td>
</tr>
<tr>
<td><button type="button" onclick="domainCmd('block', redirectOpt());">block</button>: 拦截且不返回</td>
</tr>
<tr>
<td><button type="button" onclick="domainCmd('null', redirectOpt());">null</button>: 返回空结果</td>
</tr>
<tr>
<td><button type="button" onclick="domainCmd('proxy', redirectOpt());">proxy</button>: 代理</td>
</tr>
<tr>
<td colspan="2"><button type="button" onclick="domainCmd('delete', '');">delete</button>: 删除域名配置</td>
</tr>
</table>
</div>
<div style="display:none;" id="commandTabs-3">
请选择您想要的操作：
<ul style="width:200px;" id="menu">
	<li>对 URL 操作
		<ul>
			<li id="menu-url-proxy">对 URL 进行代理，可查看访问历史</li>
			<li id="menu-url-timeout">阻塞一定时长后掉线</li>
			<li id="menu-url-drop-in">从第一次访问的某时间段内均掉线</li>
			<li id="menu-url-rewrite">对 URL 返回指定内容</li>
			<li id="menu-url-speed">对 URL （返回内容）限速</li>
			<li id="menu-url-status">返回特殊 HTTP 状态码（以模拟出错等）</li>
			<li id="menu-url-redirect">302 到另一个 URL</li>
			<li id="menu-url-map">以另一个 URL 内容返回</li>
		</ul>
	</li>
	<li>对域名操作
		<ul>
			<li id="menu-domain-default">解析到某个 IP</li>
			<li id="menu-domain-block">解析超时</li>
			<li id="menu-domain-null">解析有返回，但没有 IP</li>
			<li id="menu-domain-proxy">强制代理域名下 URL（限 80 端口）</li>
		</ul>
	</li>
</ul>
</div>
</div>

{{end}} <!-- end of owner's command guide -->

<script>

{{if .NotOwner}}{{else}}

$(document).ready(function() {

$( "#packForm" ).ajaxForm({
  success: function(data) {
    if (data == "saved") {
      reloadPack();
      alert("已保存");
    } else {
      alert("保存失败：" + data);
    }
  },
  error: function() {
    alert("访问失败");
  }
});

$( "#packDialog" ).dialog({
  autoOpen: false,
  width: 400
});

$( "#packButton" ).show();

$( "#ulCommandTabs" ).show();

$( "#commandTabs" ).tabs();

showMenuHint=true;
$( "#menu" ).menu({
  select: function( event, ui ) {
    switch (ui.item.context.id) {
    case "menu-url-proxy":
      appendCmd("url proxy <url>");
      break;
    case "menu-url-timeout":
      appendCmd("url timeout <1.0s> <url>");
      break;
    case "menu-url-drop-in":
      appendCmd("url drop <1.0s> <url>");
      break;
    case "menu-url-rewrite":
      appendCmd("url rewrite <url-encoded-content> <url>");
      break;
    case "menu-url-speed":
      appendCmd("url speed <5KB/s> <url>");
      break;
    case "menu-url-status":
      appendCmd("url status <404> <url>");
      break;
    case "menu-url-redirect":
      appendCmd("url redirect <new-url> <url>");
      break;
    case "menu-url-map":
      appendCmd("url map <source-content-url> <url>");
      break;
    case "menu-domain-default":
      appendCmd("<ip> <domain>");
      break;
    case "menu-domain-block":
      appendCmd("domain block <domain>");
      break;
    case "menu-domain-null":
      appendCmd("domain null <domain>");
      break;
    case "menu-domain-proxy":
      appendCmd("domain proxy <domain>");
      break;
    default:
      return;
    }

    if (showMenuHint) {
      showMenuHint = false;
      appendCmd("# 尖括号内容请替换成实际的值，如 <url> 替换成 http://a.bc/efg.html");
    }
  }
});

reloadPack();

$( "#operatorButton" ).show();
$( "#operatorDialog" ).dialog({
  autoOpen: false,
  width: 400
});

$( "#onlineTestDialog" ).dialog({
  autoOpen: false,
  width: 500
});

$( "#createPolicyDialog" ).dialog({
  autoOpen: false,
});

}); // end of document.ready

{{end}} <!-- end of owner's command guide -->

</script>
</body>
</html>
