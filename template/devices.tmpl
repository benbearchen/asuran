<html>
<head>
<title>devices list</title>
<style type="text/css">
/* copy from http://www.w3school.com.cn/tiy/t.asp?f=csse_table_fancy */
#profile
  {
  font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
  border-collapse:collapse;
  }

#profile td, #profile th 
  {
  font-size:1em;
  border:1px solid #98bf21;
  padding:3px 7px 2px 7px;
  min-width:100px;
  }

#profile th 
  {
  font-size:1.1em;
  text-align:left;
  padding-top:5px;
  padding-bottom:4px;
  background-color:#A7C942;
  color:#ffffff;
  }

#profile tr.alt td 
  {
  color:#000000;
  background-color:#EAF2D3;
  }
</style>
</head>
<body>

<table id="profile">
<tr>
<th>名字</th>
<th>IP</th>
<th>管理者</th>
<th>初始化时间</th>
<th>最后操作时间</th>
<th>最后请求时间</th>
</tr>
{{range .Devices}}
<tr{{if .Even}} class="alt"{{end}}>
<td>{{.Name}}</td>
<td><a href="/profile/{{.IP}}" target="_blank">{{.IP}}</a></td>
<td>{{.Owner}}</td>
<td>{{.InitTime}}</td>
<td>{{.VisitTime}}</td>
<td>{{.ActiveTime}}</td>
</tr>
{{end}}
</table>
</body>
</html>
